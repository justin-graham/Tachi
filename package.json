{
  "name": "tachi-monorepo",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter tachi-publisher-dashboard dev",
    "build": "node tools/build-optimizer.mjs",
    "build:clean": "node tools/build-optimizer.mjs --clean && node tools/build-optimizer.mjs",
    "build:fast": "node tools/build-optimizer.mjs",
    "build:packages": "node tools/build-optimizer.mjs",
    "validate": "node tools/runtime-validator.mjs",
    "validate:profile": "node tools/memory-profiler.mjs && node tools/runtime-validator.mjs",
    "validate:full": "node tools/build-optimizer.mjs && node tools/memory-profiler.mjs && node tools/runtime-validator.mjs"
  },
  "dependencies": {
    "@react-three/fiber": "^9.3.0",
    "@react-three/postprocessing": "^3.0.4",
    "postprocessing": "^6.37.7",
    "three": "^0.167.1"
  }
}
