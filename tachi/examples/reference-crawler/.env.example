# Tachi Reference Crawler Configuration
# Copy this file to .env and fill in your values

# Required: Base network RPC endpoint
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR-API-KEY

# Required: Deployed PaymentProcessor contract address
PAYMENT_PROCESSOR_ADDRESS=0x742d35Cc6634C0532925a3b8D427E3c8e3e7e7e7

# Required: Your crawler's private key (keep this secure!)
CRAWLER_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Optional: Custom User-Agent string
USER_AGENT=MyCrawler/1.0 (+https://mycompany.com/crawler)

# Optional: Request delay in milliseconds (default: 2000)
REQUEST_DELAY=2000

# Optional: Maximum concurrent requests (default: 3)
MAX_CONCURRENT=3

# Optional: Logging level (error|warn|info|debug, default: info)
LOG_LEVEL=info

# Optional: Include content in results (true|false, default: false)
INCLUDE_CONTENT=false

# Optional: Output directory (default: ./output)
OUTPUT_DIR=./output

# For testnet usage:
# BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR-API-KEY
# Use this instead of BASE_RPC_URL for testing