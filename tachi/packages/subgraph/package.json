{
  "name": "@tachi/subgraph",
  "version": "1.0.0",
  "description": "The Graph subgraph for Tachi Pay-Per-Crawl Protocol",
  "scripts": {
    "codegen": "graph codegen",
    "build": "graph build",
    "auth": "graph auth --studio $GRAPH_API_KEY",
    "deploy:studio": "graph deploy --studio tachi-protocol",
    "deploy:hosted": "graph deploy --node https://api.thegraph.com/deploy/ justingraham/tachi-protocol",
    "create:local": "graph create --node http://localhost:8020/ tachi-protocol",
    "remove:local": "graph remove --node http://localhost:8020/ tachi-protocol",
    "deploy:local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 tachi-protocol",
    "test": "graph test",
    "prepare:base": "mustache config/base.json subgraph.template.yaml > subgraph.yaml",
    "prepare:base-sepolia": "mustache config/base-sepolia.json subgraph.template.yaml > subgraph.yaml",
    "prepare:localhost": "mustache config/localhost.json subgraph.template.yaml > subgraph.yaml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justin-graham/Tachi.git",
    "directory": "tachi/packages/subgraph"
  },
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^3.13.9",
    "@graphprotocol/graph-cli": "0.79.0",
    "@graphprotocol/graph-ts": "0.35.1",
    "graphql": "^16.11.0"
  },
  "devDependencies": {
    "matchstick-as": "0.6.0",
    "mustache": "^4.2.0"
  }
}
