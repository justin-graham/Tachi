{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["scripts/**/*", "test/**/*", "contracts/**/*", "*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "artifacts/**/*",
    "cache/**/*",
    ".hardhat/**/*",
    "typechain/**/*",
    "typechain-types/**/*",
    "coverage/**/*",
    ".nyc_output/**/*",
    "*.log",
    ".cache/**/*",
    ".temp/**/*",
    ".tmp/**/*"
  ]
}
