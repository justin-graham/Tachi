{
  "name": "@tachi/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for Tachi Protocol - Decentralized pay-per-crawl licensing system for AI training data",
  "private": true,
  "license": "MIT",
  "author": "Tachi Protocol Team",
  "homepage": "https://tachi.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/tachi-protocol/tachi.git",
    "directory": "packages/contracts"
  },
  "keywords": ["blockchain", "smart-contracts", "ai", "crawling", "licensing", "ethereum", "base"],
  "scripts": {
    "build": "forge build && npx hardhat compile",
    "test": "forge test && npx hardhat test",
    "deploy": "forge script script/Deploy.s.sol:DeployScript --rpc-url $RPC_URL --broadcast",
    "deploy:upgradeable": "npx hardhat run scripts/deploy-upgradeable.ts",
    "deploy:upgradeable:base-sepolia": "npx hardhat run scripts/deploy-upgradeable.ts --network base-sepolia",
    "deploy:upgradeable:base": "npx hardhat run scripts/deploy-upgradeable.ts --network base",
    "upgrade": "npx hardhat run scripts/upgrade-clean.ts",
    "upgrade:base-sepolia": "npx hardhat run scripts/upgrade-clean.ts --network base-sepolia",
    "upgrade:base": "npx hardhat run scripts/upgrade-clean.ts --network base",
    "setup:multisig": "npx hardhat run scripts/setup-multisig.ts",
    "setup:multisig:base-sepolia": "npx hardhat run scripts/setup-multisig.ts --network base-sepolia",
    "setup:multisig:base": "npx hardhat run scripts/setup-multisig.ts --network base",
    "test:upgradeable": "npx hardhat run scripts/test-upgradeable.ts",
    "test:upgradeable:base-sepolia": "npx hardhat run scripts/test-upgradeable.ts --network base-sepolia",
    "test:deploy-upgrade": "npx hardhat run scripts/test-deploy-upgrade.ts",
    "ownership:transfer": "npx hardhat run scripts/transfer-ownership-multisig.ts",
    "ownership:transfer:base-sepolia": "npx hardhat run scripts/transfer-ownership-multisig.ts --network base-sepolia",
    "ownership:transfer:base": "npx hardhat run scripts/transfer-ownership-multisig.ts --network base",
    "ownership:verify": "npx hardhat run scripts/verify-multisig-ownership.ts",
    "ownership:verify:base-sepolia": "npx hardhat run scripts/verify-multisig-ownership.ts --network base-sepolia",
    "ownership:verify:base": "npx hardhat run scripts/verify-multisig-ownership.ts --network base",
    "emergency:recover": "npx hardhat run scripts/emergency-recovery.ts",
    "emergency:recover:base-sepolia": "npx hardhat run scripts/emergency-recovery.ts --network base-sepolia",
    "multisig:setup": "./scripts/setup-hardware-wallets.sh",
    "multisig:deploy:testnet": "npx hardhat run scripts/deploy-production-multisig.ts --network baseSepolia",
    "multisig:deploy:production": "npx hardhat run scripts/deploy-production-multisig.ts --network base",
    "multisig:test": "npx hardhat run scripts/test-multisig-operations.ts",
    "multisig:verify": "npx hardhat run scripts/verify-production-multisig.ts",
    "multisig:monitor": "npx hardhat run scripts/monitor-multisig.ts",
    "checklist:production": "node scripts/production-checklist.js",
    "security:audit": "forge test --gas-report && npm run test",
    "emergency:recover:base": "npx hardhat run scripts/emergency-recovery.ts --network base",
    "emergency:generate-tx": "npx hardhat run scripts/emergency-recovery.ts -- --generate-tx",
    "phase1:status": "node phase1-status.js",
    "clean": "forge clean && npx hardhat clean",
    "format": "forge fmt",
    "monitoring:test": "npx hardhat test test/monitoring-integration.test.ts",
    "monitoring:start": "node dist/src/monitoring/start-monitoring.js",
    "monitoring:start:dev": "node dist/src/monitoring/start-monitoring.js development",
    "monitoring:setup": "./scripts/setup-production-monitoring-complete.sh",
    "propagate-addresses": "npx ts-node scripts/propagate-addresses.ts",
    "propagate-addresses:base": "npx ts-node scripts/propagate-addresses.ts base 8453",
    "propagate-addresses:base-sepolia": "npx ts-node scripts/propagate-addresses.ts base-sepolia 84532",
    "check-placeholders": "./scripts/check-placeholders.sh",
    "production-ready": "./scripts/check-placeholders.sh && echo 'âœ… Run this before mainnet deployment'"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.4",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@types/express": "^4.17.23",
    "@types/node": "^20.0.0",
    "dotenv": "^16.0.0",
    "ethers": "^6.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/contracts-upgradeable": "^5.4.0",
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "viem": "^2.37.9"
  }
}
