{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "lib": ["es2020"],
    "allowJs": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["scripts/**/*", "test/**/*", "contracts/**/*", "*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "artifacts/**/*",
    "cache/**/*",
    ".hardhat/**/*",
    "typechain/**/*",
    "typechain-types/**/*",
    "coverage/**/*",
    ".nyc_output/**/*",
    "*.log",
    ".cache/**/*",
    ".temp/**/*",
    ".tmp/**/*"
  ]
}
