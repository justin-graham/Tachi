# =============================================================================
# SECRETS (Set via hosting platform, NOT in this file!)
# =============================================================================
# ⚠️  DO NOT FILL IN THESE VALUES IN THIS FILE!
# Set these as environment variables/secrets in your deployment platform

# Supabase
# SUPABASE_URL=
# SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_ROLE_KEY=
# DATABASE_URL=

# JWT Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
# JWT_SECRET=
# JWT_REFRESH_SECRET=

# Redis
# REDIS_URL=
# REDIS_PASSWORD=

# Stripe (Use LIVE keys)
# STRIPE_SECRET_KEY=sk_live_...
# STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# Monitoring
# SENTRY_DSN=
# SENTRY_AUTH_TOKEN=

# Services
# CLOUDFLARE_API_TOKEN=
# WALLETCONNECT_PROJECT_ID=

# =============================================================================
# SECURITY SETTINGS (REQUIRED FOR PRODUCTION)
# =============================================================================
ENABLE_HTTPS_ONLY=true
SECURE_COOKIES=true
HELMET_ENABLED=true
SESSION_SECURE=true
SESSION_SAME_SITE=strict
DATABASE_SSL=true
REDIS_TLS=true

# Rate Limiting (Stricter for production)
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
LOGIN_RATE_LIMIT_MAX=3

# CORS (Specific origins only)
CORS_ORIGINS=https://tachiprotocol.com,https://app.tachiprotocol.com
ALLOW_CORS_ALL_ORIGINS=false

# =============================================================================
# FEATURE FLAGS (PRODUCTION)
# =============================================================================
ENABLE_SWAGGER_DOCS=false
ENABLE_DEBUG_ENDPOINTS=false
DISABLE_AUTH_FOR_TESTING=false
MAINTENANCE_MODE=false

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this template and fill in values in your deployment platform
# 2. NEVER commit files with actual secrets
# 3. Use hardware wallets for contract deployments
# 4. Enable 2FA on all service accounts
# 5. Rotate secrets regularly (every 90 days)
# 6. Monitor logs and alerts daily
